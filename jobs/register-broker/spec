---
name: register-broker

templates:
  run.erb: bin/run

packages: []

consumes:
  - name: service-broker
    type: service-broker
    optional: true

properties:
  cf.api_url:
    description: "Cloud Foundry API URL"
    default: ""

  cf.admin_username:
    description: "Cloud Foundry admin username"
    default: "admin"

  cf.admin_password:
    description: "Cloud Foundry admin password"
    default: ""

  cf.skip_ssl_validation:
    description: "Skip SSL validation for CF API"
    default: false

  broker.name:
    description: "Service broker name to register"
    default: "authentik"

  broker.url:
    description: "Service broker URL (auto-detected from link if not specified)"
    default: ""

  broker.username:
    description: "Service broker basic auth username"
    default: "broker"

  broker.password:
    description: "Service broker basic auth password"

  broker.enable_global_access:
    description: "Enable service access for all orgs"
    default: true
